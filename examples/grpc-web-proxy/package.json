{
    "scripts": {
        "generate": "protoc --ts_out=cl --go_out=. --go-grpc_out=. weather.proto --ts_opt=runtime_package=npm:google-protobuf --ts_opt=grpc_web_package=npm:grpc-web",
        "srv": "esbuild --bundle srv.ts --platform=node > dist/srv.js && node dist/srv.js",
        "cl": "esbuild --bundle cl.ts > dist/client.js && http-server -S --key localhost-key.pem --cert localhost.pem dist"
    },
    "dependencies": {
        "protoc-gen-ts": "workspace:*",
        "grpc-web": "^1.5.0",
        "@grpc/grpc-js": "^1.9.11",
        "google-protobuf": "^3.21.2",
        "base64-stream": "^1.0.0"
    },
    "devDependencies": {
        "esbuild": "^0.19.6",
        "http-server": "^14.1.1"
    }
}